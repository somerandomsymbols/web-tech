@model Etap12.Doctor

@{
    ViewData["Title"] = "Видалити лікаря";
}

<h1>Видалити лікаря</h1>

<h3>Ви справді хочете видалити лікаря?</h3>
<div>
    <h4>Лікар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Education)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Education)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateStartWork)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateStartWork)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorPhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorPhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorPhoto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorPhoto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hospital)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hospital.HospitalName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DoctorId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-controller="Doctors" asp-action="Index">Назад</a>
    </form>
</div>
